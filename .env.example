
# AI StoryForge Environment Variables Template
# Copy this file to .env.local and fill in your values

# Application Settings
VITE_APP_NAME=AI StoryForge
VITE_APP_URL=http://localhost:8080
VITE_API_URL=http://localhost:3001

# Environment (development, staging, production)
VITE_ENVIRONMENT=development
NODE_ENV=development

# Feature Flags
VITE_ENABLE_ANALYTICS=false
VITE_ENABLE_ERROR_REPORTING=false
VITE_LOG_LEVEL=debug

# AI Model Configuration
VITE_DEFAULT_MODEL=gpt-4
VITE_AVAILABLE_MODELS=gpt-4,gpt-4o,claude-3-opus,claude-3-sonnet,claude-3-haiku

# Story Generation Settings
VITE_MAX_CHAPTERS=50
VITE_MIN_CHAPTERS=3
VITE_DEFAULT_CHAPTERS=10

# UI Configuration
VITE_THEME=system
VITE_ENABLE_DARK_MODE=true

# Performance Settings
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false
